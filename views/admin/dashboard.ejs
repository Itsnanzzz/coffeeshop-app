<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100">
    <div class="flex">
        <!-- Sidebar -->
        <div class="w-64 bg-white shadow-lg min-h-screen">
            <div class="p-6">
                <h1 class="text-2xl font-bold text-gray-800">‚òï Coffee Shop</h1>
                <p class="text-gray-600 text-sm">Admin Panel</p>
            </div>
            <nav class="mt-6">
                <a href="/admin/dashboard" class="block py-3 px-6 bg-blue-50 text-blue-600 border-r-4 border-blue-600">
                    üìä Dashboard
                </a>
                <a href="/admin/products" class="block py-3 px-6 text-gray-600 hover:bg-gray-50">
                    üçµ Produk
                </a>
                <a href="/admin/orders" class="block py-3 px-6 text-gray-600 hover:bg-gray-50">
                    üì¶ Pesanan
                </a>
                <a href="/" target="_blank" class="block py-3 px-6 text-gray-600 hover:bg-gray-50">
                    üëÄ Lihat Menu
                </a>
                <a href="/admin/logout" class="block py-3 px-6 text-gray-600 hover:bg-gray-50">
                    üö™ Logout
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-8">Dashboard</h1>
            
            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center">
                        <div class="p-3 bg-blue-100 rounded-lg">
                            <span class="text-blue-600 text-2xl">üí∞</span>
                        </div>
                        <div class="ml-4">
                            <p class="text-gray-600">Penjualan Hari Ini</p>
                            <h3 class="text-2xl font-bold">Rp <%= todaySales.toLocaleString() %></h3>
                        </div>
                    </div>
                </div>

                <div class="bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center">
                        <div class="p-3 bg-green-100 rounded-lg">
                            <span class="text-green-600 text-2xl">üìà</span>
                        </div>
                        <div class="ml-4">
                            <p class="text-gray-600">Penjualan Bulan Ini</p>
                            <h3 class="text-2xl font-bold">Rp <%= monthlySales.toLocaleString() %></h3>
                        </div>
                    </div>
                </div>

                <div class="bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center">
                        <div class="p-3 bg-purple-100 rounded-lg">
                            <span class="text-purple-600 text-2xl">üèÜ</span>
                        </div>
                        <div class="ml-4">
                            <p class="text-gray-600">Produk Terlaris</p>
                            <h3 class="text-2xl font-bold"><%= popularProducts.length %></h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Popular Products -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-bold mb-4">üèÜ Produk Terlaris</h2>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="border-b">
                                    <th class="text-left p-3">Produk</th>
                                    <th class="text-left p-3">Terjual</th>
                                    <th class="text-left p-3">Pendapatan</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% popularProducts.forEach(product => { %>
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="p-3 font-medium"><%= product.product_name %></td>
                                    <td class="p-3"><%= product.total_sold %></td>
                                    <td class="p-3">Rp <%= Number(product.total_revenue).toLocaleString() %></td>
                                </tr>
                                <% }); %>
                                <% if (popularProducts.length === 0) { %>
                                <tr>
                                    <td colspan="3" class="p-3 text-center text-gray-500">Belum ada data penjualan</td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Recent Orders -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-xl font-bold mb-4">üì¶ Pesanan Terbaru</h2>
                    <div class="space-y-4">
                        <% recentOrders.forEach(order => { %>
                        <div class="border rounded-lg p-4">
                            <div class="flex justify-between items-start">
                                <div>
                                    <p class="font-semibold"><%= order.customer_name %></p>
                                    <p class="text-sm text-gray-600">Meja: <%= order.table_number %></p>
                                </div>
                                <div class="text-right">
                                    <p class="font-bold">Rp <%= order.total_amount.toLocaleString() %></p>
                                    <span class="text-xs px-2 py-1 rounded <%= order.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                                                                             order.status === 'diproses' ? 'bg-blue-100 text-blue-800' :
                                                                             order.status === 'siap' ? 'bg-green-100 text-green-800' :
                                                                             order.status === 'selesai' ? 'bg-gray-100 text-gray-800' :
                                                                             'bg-red-100 text-red-800' %>">
                                        <%= order.status %>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                        <% if (recentOrders.length === 0) { %>
                        <p class="text-center text-gray-500 py-4">Belum ada pesanan</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Export Section -->
            <div class="bg-white rounded-lg shadow p-6 mt-8">
                <h2 class="text-xl font-bold mb-4">üìÑ Export Data</h2>
                <form action="/admin/export/csv" method="GET" class="flex gap-4 items-end">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Bulan</label>
                        <select name="month" class="border rounded p-2 w-40" required>
                            <option value="">Pilih Bulan</option>
                            <% for(let i=1; i<=12; i++) { %>
                            <option value="<%= i %>"><%= new Date(2000, i-1).toLocaleString('id', {month:'long'}) %></option>
                            <% } %>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Tahun</label>
                        <select name="year" class="border rounded p-2 w-32" required>
                            <option value="">Pilih Tahun</option>
                            <% for(let i=2023; i<=2025; i++) { %>
                            <option value="<%= i %>"><%= i %></option>
                            <% } %>
                        </select>
                    </div>
                    <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition">
                        Export CSV
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/notifications.js"></script>
</body>
</html>